<div class="box">
	<div class="box-head">
		<h2 class="left">Training Courses For Staff  &nbsp;
	</div>
</div>

<div class="toolbar">
	<p><%= link_to image_tag("add.png", :border => 0, :title => 'New Course')+ "New", new_ptcourse_path %></p>
</div>


<div class="indextable">
<table>
  <tr>
    <th>Name</th>
    <th>Provider</th>
    <th>Duration</th>
		<th>Cost</th>
    <th>Description</th>
    <th>Approved</th>
    <th colspan=3 class="ac">Control</th>
  </tr>

	<% @ptcourses.each do |ptcourse| %>
  <tr>
    <td><%=h ptcourse.name %></td>
    <td><%=h ptcourse.provider.name %></td>
    <td><%=h ptcourse.duration %> Days</td>
		<td><%=h ringgols(ptcourse.cost) %></td>
    <td><%=  truncate(ptcourse.description, :length => 65, :omission => (link_to '... [more]', ptcourse)) %></td>
    <td><%=h ptcourse.approved? ? "Approved" : "" %></td>
    <td width=10px><%= link_to image_tag("document.png", :border => 0, :title => 'Show'), :action => 'show', :id => ptcourse %></td>
    <td width=10px><%= link_to image_tag("edit.png", :border => 0, :title => 'Edit'), :action => 'edit', :id => ptcourse %></td>
    <td width=10px><%= link_to image_tag("delete.png", :border => 0, :title => 'Delete'), ptcourse, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<%= link_to 'New Training Course', new_ptcourse_path %>
</div>