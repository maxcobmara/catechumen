<div class="tform">
  <table width=100% >

	<tr>
		<th colspan = 2>New Bulletins</th>
	</tr>
	<tr>
		<td class="leftcol"><label for="headline"><b>Headline:</b></label><font color="red"> * </font></td>
		<td><%= f.text_field :headline %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="content"><b>Content:</b></label><font color="red"> * </font></td>
		<td><%= f.text_area :content, :size => "30x7" %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="postedby_id"><b>Posted By:</b></label></td>
		<td><%= f.collection_select :postedby_id, Staff.find(:all), :id, :name %></td>
	</tr>
	<!-- if id validated for presence... no need to put , :include_blank => true -->
	<tr>
		<td class="leftcol"><label for="publishdt"><b>Publish Date:</b></label></td>
		<td><%= f.date_select :publishdt, :start_year => Time.now.year-1, :order => [:day, :month, :year], :default => 1.days.from_now  %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="data">Upload File:</label></td>
		<td><font color=#444 size=-2>Current file is : 
				<% if @bulletin.data.exists? then %>
		    	<%= @bulletin.data_file_name %><BR>
				<% end %> Or </font>
	      <%= f.file_field :data %><BR>
			  <font color=#AAA size=-2>pdf/txt/doc/xls/jpg.  Max : 5MB</font></td>
	</tr>
	


</table>
<BR>