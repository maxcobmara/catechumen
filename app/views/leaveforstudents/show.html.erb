<div class="tform">
  <table width=100% >

	<%= render :partial => 'applyshow' %>


	<tr>
		<th colspan = 2>Approve Student Leave Request</th>
	</tr>
	<tr>
	    <td class="leftcol"><label for="approved"><b>Approve Student Leave:</b></label></td>
		<td><%=h @leaveforstudent.approved? ? "Approved" : "Not Approved" %></td>
	</tr>
	<tr>
		<td class="leftcol"><label for="staff_id"><b>Approved By:</b></label></td>
		<td><%=h @leaveforstudent.staff_id? ? "" : @leaveforstudent.approver_details %></td>
	</tr>
	<tr>
	    <td class="leftcol"><label for="approvedate"><b>Approved On:</b></label></td>
		<td><%=h @leaveforstudent.approvedate %></td>
	</tr>
  </table>
</div>


<%= link_to 'Edit', edit_leaveforstudent_path(@leaveforstudent) %> |
<%= link_to 'Back', leaveforstudents_path %>