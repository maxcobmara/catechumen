<!-- Box -->
<div class="box">
	<!-- Box Head -->
	<div class="box-head">
		<% if @edit_type == "Edit Checked" %>
			<h2 class="left">Edit Multiple Student Attendance</h2>
		<% end %>
	</div>
</div>

<% @classsession_of_studentattendances = @studentattendances.map(&:weeklytimetable_details_id).uniq.count %>
<% if @classsession_of_studentattendances==1 %>

	<span style="text-decoration:underline;font-weight:bold;padding-left:20px;">
		Subject : <%=@studentattendances[0].weeklytimetable_detail.weeklytimetable_topic.full_parent %>
	</span><br>
	<span style="text-decoration:underline;font-weight:bold;padding-left:20px;">
		Topic : <%=@studentattendances[0].weeklytimetable_detail.weeklytimetable_topic.subject_list %>
	</span><br>
	<span style="text-decoration:underline;font-weight:bold;padding-left:20px;">
		Date : <%=h @studentattendances[0].weeklytimetable_detail.get_date_day_of_schedule %>
		&nbsp;Time : <% if @studentattendances[0].weeklytimetable_detail.time_slot==0 %>
			<%=TimetablePeriod.find(@studentattendances[0].weeklytimetable_detail.time_slot2).timing %>
		<% else %>
			<%=TimetablePeriod.find(@studentattendances[0].weeklytimetable_detail.time_slot).timing %>
		<% end %>
	</span><br>
	<span style="text-decoration:underline;font-weight:bold;padding-left:20px;">
		Lecturer : <%=h @studentattendances[0].weeklytimetable_detail.weeklytimetable_lecturer.name %>
	</span><br>
	<span style="text-decoration:underline;font-weight:bold;padding-left:20px;">
		Intake : <%=h @studentattendances[0].weeklytimetable_detail.weeklytimetable.schedule_intake.name %> 
	</span>	
	<br><br><br>
	
	<div class="tlist" style="padding-left:20px;">
		<% form_for :student_attendance, :url => update_multiple_student_attendances_path, :html => {:method => :put, :id => "form1" } do |f| %>

			<table>
				<tr>
					<th>No</th>
					<th>Student</th>
					<th>Attendance</th>
				</tr>
				<% @studentattendances.sort_by{|x|x.student.name}.each_with_index do |studentattendance,no| %>
					<%= hidden_field_tag "student_attendance_ids[]", studentattendance.id %>
					<tr>
						<td><%=no+1%></td>
						<td><%=h studentattendance.student.matrix_name %></td>
						<!--<td><%#= text_field_tag "attends[]", studentattendance.attend,:size=> 4 %></td>	-->
						<td style="text-align:center;"><%= check_box_tag "attends[#{no}]", true, studentattendance.attend, :class => "check" %></td>
					</tr>										   
				<% end %>
			</table>
			<br>
	</div><!--end for div tlist-->
	
			<table border=0 cellspacing=0 cellpadding=0>
				<tr>
					<td style="padding-left:20px;"><%= f.submit "Submit" %></td>
					<td style="padding-left:65px;"><!-- ref: http://railsforum.com/viewtopic.php?id=2151 rleblic2007-10-25 08:43:07 -->
					<!--http://www.ryboe.com/2008/07/10/select-all-checkboxes-with-prototype-js.html -->
					<b>Check/Uncheck all</b>&nbsp; <input id="check_all" name="check_all" type="checkbox" checked="checked" onclick="Form.getInputs('form1', 'checkbox').each(function(box){box.checked = $('check_all').checked})" />
					</td>
				</tr>
			</table>
		
		<% end %><!--end of form-->

	<!--</div>--><!--end for div tlist-->


<% else %>
	Please select students of the same <b>class (subject+topic+date+time+lecturer+intake)</b> for multiple edit. 
<% end %><br><br>

<%= link_to 'Back', student_attendances_path %>