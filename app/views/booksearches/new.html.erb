<div class="tform">
	

<% form_for @booksearch do |f| %>
  <%= f.error_messages %>
	<table width=100% >
		<% if @searchbooktype=='1' || @searchbooktype==1 %>
		
			<H2>Library Resources (Book) Search</H2>
			
			<%= hidden_field_tag :method,  1 %>
			<%= f.hidden_field :stock_summary, :value=> 0%>
			<tr><td colspan=2>Book Listing for Stock Verification :</td></tr>
			<tr>
				<td class="leftcol">&nbsp;&nbsp;&nbsp;<%= f.label :book_title %></td>
				<td><%= f.text_field :title %></td>
			</tr>
			<tr>
				<td class="leftcol">&nbsp;&nbsp;&nbsp;<%= f.label :author %></td>
				<td><%= f.text_field :author %></td>
			</tr>
			<tr>
				<td class="leftcol">&nbsp;&nbsp;&nbsp;<label>ISBN no</label></td>
				<td><%= f.text_field :isbn %></td>
			</tr>
			<tr>
				<td class="leftcol">&nbsp;&nbsp;&nbsp;<%= f.label :accession_no %></td>
				<td><%= f.text_field :accessionno %></td>
			</tr>
		<% elsif @searchbooktype=='2' || @searchbooktype==2  %>
		
			<H2>Library Resources (Book) Search</H2>
		
				<%= hidden_field_tag :method,  2 %>
				<%=f.hidden_field :stock_summary, :value=> 1 %>
				<tr><td colspan=2>Stock Summary By :</td></tr>
				<tr>
					<td class="leftcol">&nbsp;&nbsp;&nbsp;<label>Class No (LC) / (NLM)</label></td>
					<td><%= f.text_field :classno %></td>
				</tr>
				<tr>
					<td class="leftcol">&nbsp;&nbsp;&nbsp;<%= f.label :accession_no %></td>
					<td style="vertical-align:bottom;">
						<%= f.text_field :accessionno_start, :size=>10, :placeholder=> "from..." %> 
						<%= f.text_field :accessionno_end, :size=>10, :placeholder=> "...until" %>
					</td>
				</tr>
		<% elsif @searchbooktype=='3' || @searchbooktype==3 %>
		
			<H2>Library Resources (Book) Search</H2>
			
				<%= hidden_field_tag :method,  3 %>
				<%=f.hidden_field :stock_summary, :value=> 2 %>
				<tr><td colspan=2>Stock Listing By:</td></tr>
				<tr>
					<td class="leftcol">&nbsp;&nbsp;&nbsp;<label>Class No (LC) / (NLM)</label></td>
					<td><%= f.text_field :classno %></td>
				</tr>
				<tr>
					<td class="leftcol">&nbsp;&nbsp;&nbsp;<%= f.label :accession_no %></td>
					<td style="vertical-align:bottom;">
						<%= f.text_field :accessionno_start, :size=>10, :placeholder=> "from..." %> 
						<%= f.text_field :accessionno_end, :size=>10, :placeholder=> "...until" %>
					</td>
				</tr>
		
		<% elsif @searchbooktype=='4' || @searchbooktype==4 %>				
				<!--removed-librarytransactionsearch-->
		<% end %>
	</table>

  <p><%= f.submit "Search" %>&nbsp;<font size=-2>Leaves all fields 'blank' to display ALL record.</font></p>
<% end %>

</div>


