<!-- Box -->
<div class="box">
	<!-- Box Head -->
	<div class="box-head">
		<h2 class="left"><%= t 'staff.list' %></h2>
		<div class="right">
			<% form_tag staffs_path, :method => 'get' do %>
			<%= text_field_tag :search, params[:search] %>
			<%= submit_tag I18n.t('search'), :icno => nil %>
			<% end %>
		</div>
    </div>

    <div class="tlist">
	  	<table width=100% border="0" cellpadding="0" cellspacing="0">
	        <tr>
	          <th><%= t 'staff.icno' %></th>
	          <th><%= t 'staff.name' %></th>
	          <th><%= t 'staff.position' %></th>
	          <th colspan=3 class="ac"><%= t 'control' %></th>
	        </tr>
	
	           <% @staffs.each do |staff| %>
            <tr>
               <td><%=h staff.formatted_mykad %></td>
               <td><%=h staff.name %></td>
               <td><%=h staff.position.blank? ? "-" : staff.position.positionname %></td>
               <td width=10px ><%= link_to image_tag("document.png", :border => 0), :action => 'show', :id => staff %></td>
               <td width=10px><%= link_to image_tag("edit.png", :border => 0), :action => 'edit', :id => staff %></td>
               <td width=10px><%= link_to 'Destroy', staff, :confirm => 'Are you sure?', :method => :delete %></td>
               <td width=10px><%= link_to image_tag("report.png", :border => 0, :title => 'Borang Maklumat Staf'), :action => 'borang_maklumat_staff', :id => staff %></td>
            </tr>
            <% end %>
        </table>

</div></div>


