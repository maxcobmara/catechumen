<div class="tform">
	<H2>Pages Details</H2>
<table width=100% >

	<tr>
		<td class="leftcol"><label for="name">Name : </label></td>
		<td><%=h @page.name %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="title">Title : </label></td>
		<td><%=h @page.title %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="body">Body : </label></td>
		<td><%=h simple_format(@page.body) %></td>
	</tr>

	<tr>
		<td class="leftcol"><label for="admin">Admin : </label></td>
		<td><%= @page.admin? ? "TRUE" : "FALSE" %></td>
	</tr>
		
</table>
</div>
<BR>
	<% User.current_user.roles.each do |role| %>
		<% @lib=true if role.id==5 %>
		<% @admin=true if role.id == 2%>
	<% end %>
<%= link_to 'Edit', edit_page_path(@page) %> |
<% if @admin==true %>
	<%= link_to 'Back', pages_path %>
<% else %>
	<% if @lib==true%>
		<%= link_to 'Back', librarytransactions_path %>
	<% end %>
<% end %>