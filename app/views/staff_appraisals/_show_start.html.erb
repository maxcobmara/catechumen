<fieldset>
	<legend><%= t 'evaluation.form.title_part1' %></legend>
		<table width=100% >
			<tr>
				<td class="leftcol"><%= t 'evaluation.form.name' %></td>
		    <td><%=h @staff_appraisal.appraised.mykad_with_staff_name %></td>
			</tr>
			
			<tr>
				<td class="leftcol"><%= t 'evaluation.form.evaluationdate' %></td>
			  <td><%=h (@staff_appraisal.evaluation_year).year %></td>
			</tr>
			<% if @staff_appraisal.submit_for_evaluation1 == true %>
			<tr>
				<td class="leftcol">Submitted for Evaluation on</td>
			  <td><%=h l(@staff_appraisal.submit_for_appraisal1_on) %></td>
			</tr>
			<% end -%>
		</table>
</fieldset>

<fieldset>
	<legend><%= t 'evaluation.form.title_partIIa' %></legend>
		<table width=100% >
			<tr>
				<td class="leftcol" colspan=2><%= t 'evaluation.form.label_001' %></td>
			</tr>
			<tr>
		    <td colspan=2>
							<table width=90%>
								<tr>
									<th>Date</th>
									<th>Activity</th>
									<th>Level</th>
								</tr>
								<% for evactivity in @staff_appraisal.evactivities %>
								<tr>
									<td><%= l(evactivity.actdt) %></td>
									<td><%= evactivity.evactivity %></td>
									<td><%= (Evactivity::EVACT.find_all{|disp, value| value == evactivity.actlevel}).map {|disp, value| disp} %></td>
								</tr>
								<% end -%>
							</table></td>
			</tr>
		</table>
</fieldset>

<fieldset>
	<legend><%= t 'evaluation.form.title_part2b' %></legend>
		<table width=100% >
			<tr>
				<td class="leftcol" colspan=2><%= t 'evaluation.form.label_003' %></td>
			</tr>
			<tr>
		    <td colspan=2>
							<table width=90%>
								<tr>
									<th>Name</th>
									<th>Type</th>
									<th>Date</th>
									<th>Duration</th>
								</tr>
								<% for ptdo in Ptdo.find(:all, :conditions => ['staff_id = ?', @staff_appraisal.appraised]) %>
								<tr>
									<td><%= ptdo.ptschedule.ptcourse.name %></td>
									<td><%= (Ptcourse::COURSE_TYPE.find_all{|disp, value| value == ptdo.ptschedule.ptcourse.course_type}).map {|disp, value| disp} %></td>
									<td><%= l(ptdo.ptschedule.start) %></td>
									<td><%= ptdo.ptschedule.ptcourse.duration %> Days</td></tr>
								<% end -%>
							</table></td>
			</tr>
			<!--  TODO : Training that is requested but not approved

						<tr>
							<td class="leftcol" colspan=2><%= t 'evaluation.form.label_004' %></td>
						</tr>-->
			
						<tr>
							<td class="leftcol" colspan=2><%= t 'evaluation.form.label_004' %></td>
						</tr>
						<tr>
					    <td colspan=2>
										<table width=90%>
											<tr>
												<th>Activity</th>
												<th>Reason</th>
											</tr>
											<% for trainneed in @staff_appraisal.trainneeds %>
											<tr>
												<td><%= trainneed.name %></td>
												<td><%= trainneed.reason %></td>
											</tr>
											<% end -%>
										</table></td>
						</tr>
		</table>
</fieldset>
