<script type="text/javascript">
	$j(document).ready(function(){
			//show submit date
			$j(".score").keyup(function() {  
			  var eval2_part_ii = $j("#staff_appraisal_eval2_part_ii").val();
			  var eval2_quantity = $j("#staff_appraisal_eval2_quantity").val();
				var eval2_quality = $j("#staff_appraisal_eval2_quality").val();
				var eval2_time = $j("#staff_appraisal_eval2_time").val();
				var eval2_effective = $j("#staff_appraisal_eval2_effective").val();
				
				var eval2_knowledge = $j("#staff_appraisal_eval2_knowledge").val();
				var eval2_rule = $j("#staff_appraisal_eval2_rule").val();
				var eval2_communicate = $j("#staff_appraisal_eval2_communicate").val();
				
				var eval2_leader = $j("#staff_appraisal_eval2_leader").val();
				var eval2_manage = $j("#staff_appraisal_eval2_manage").val();
				var eval2_discipline = $j("#staff_appraisal_eval2_discipline").val();
				var eval2_proactive = $j("#staff_appraisal_eval2_proactive").val();
				var eval2_relate = $j("#staff_appraisal_eval2_relate").val();
				
				
				var a = $j("#lasttotal").val();
				var b = $j("#staff_appraisal_eval2_percent").val();
				var ansC = document.getElementById("staff_appraisal_evaluation_total");						
				ansC.value = (a*1 + b*1)/2;
			 
				var ansD = document.getElementById("staff_appraisal_eval2_percent");
				ansD.value = ((eval2_part_ii*10) + 
				             ((eval2_quantity*1 + eval2_quality*1 + eval2_time*1 + eval2_effective*1)/4*50) +
										 ((eval2_knowledge*1 + eval2_rule*1 + eval2_communicate*1)/3*20) +
										 ((eval2_leader*1 + eval2_manage*1 + eval2_discipline*1 + eval2_proactive*1 + eval2_relate*1)/5*20))/10;
				
				

			
			});
			
			
			//show submit date
			$j("input[id='is_complete']").change(function() {  
			 if($j('#is_complete').is(':checked')) { 
			    $j("#span_is_complete").show("highlight"); 
			 }else		{
			    $j("#span_is_complete").hide(""); 
			 }	
			});

			$j("input[id='is_complete']").each(function() {  
			 if($j('#is_complete').is(':checked')) { 
			    $j("#span_is_complete").show("highlight"); 
			 }else		{
			    $j("#span_is_complete").hide(""); 
			 }	
			});

	});
</script>

