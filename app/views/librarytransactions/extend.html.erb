<h3>Extend Borrowing</h3>

<% form_for(@librarytransaction) do |f| %>
  <%= f.error_messages %>
 
	<%=render :partial => 'show' %>
	<div class="tform">
		<table>
  	<tr>
			<td class="leftcol" ><label for="extended"><b><%= t 'librarytransaction.extend' %></b></label></td>
		  <td><%= f.check_box :extended %><font color=#AAA size=-2> - will extend borrowing for another 14 days</font></td>
			  <%#= f.hidden_field :libextended_by, :value => User.current_user.staff_id %>
		</tr>
		</table>
	</div>
	<p>
    <%= f.submit (t 'update') %>
  </p>
<% end %>

<%= link_to 'Show', @librarytransaction %> |
<%= link_to 'Back', librarytransactions_path %>