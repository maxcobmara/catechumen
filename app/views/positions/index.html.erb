<!-- Box -->
<div class="box">
	<!-- Box Head -->
	<div class="box-head">
		<h2 class="left"><%= t 'positions.list' %></h2>
		<div class="right">
			<label>
            <% form_tag positions_path, :method => 'get' do %>
	        <%= text_field_tag :search, params[:search] %>
	        <%= submit_tag "Search", :positionname => nil %>      
	        <% end %>
	        </label>
	    </div>
	</div>

	<div class="tlist">
    <table width=90% border="0" cellpadding="0" cellspacing="0">
	  <tr>
	     <th><%= t 'positions.positioncode' %></th>
		 <th><%= t 'positions.positionname' %></th>
		 <th><%= t 'positions.personname' %></th>
		 <th><%= t 'positions.taskmain' %></th>
		 <th colspan=3 class="ac">Control</th>
	  </tr>
      <% @positions.each do |position| %>
      <tr>
         <td><%=h position.positioncode %></td>
         <td><%=h position.positionname %></td>
        
         <td><%=h position.staff.blank? ? "-" : position.staff.name %></td>
         <td><%=h position.taskmain %></td>
		 <td><%= link_to image_tag("document.png", :border => 0), :action => 'show', :id => position %></td>
         <td><%= link_to image_tag("edit.png", :border => 0), :action => 'edit', :id => position %></td>
         <td><%= link_to 'Destroy', position, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
      <% end %>
    </table>
    </div>
</div>
<br />

<%= link_to (t 'positions.create'), new_position_path %>

