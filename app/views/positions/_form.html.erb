<div class="tform">
<table width=100%>
	<tr>
		<th colspan=2><%= t 'positions.position' %></td>
	</tr>
	<tr>
		<td class="leftcol"><label for="positioncode"><b><%= t 'positions.positioncode' %></b></label><font color="red"> * </font></td>
		<td><%= f.text_field :positioncode %></td>
	</tr>
	
	
	<tr>
		<td class="leftcol"><label for="positionname"><b><%= t 'positions.positionname' %></b></label></td>
		<td><%= f.text_field :positionname %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="positionname"><b><%= t 'positions.personname' %></b></label></td>
		<td><%=h @position.staff.blank? ? "-" : @position.staff.name %></td>
	</tr>
	
	
	<tr>
		<td class="leftcol"><label for="parent_id"><b><%= t 'positions.parent_id' %></b></label></td>
		<td><%= f.collection_select :parent_id, Position.find(:all), :id, :position_with_code, :include_blank => true %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="staffgrade_id"><b><%= t 'positions.grade_id' %></b></label></td>
		<td><%= f.collection_select :staffgrade_id, Staffgrade.find(:all), :id, :sgname, :include_blank => true %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="unit"><b><%= t 'positions.unit' %></b></label></td>
		<td><%= f.text_field :unit %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="taskmain"><b><%= t 'positions.taskmain' %></b></label></td>
		<td><%= f.text_area :taskmain, :size => "30x7" %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="taskother"><b><%= t 'positions.taskother' %></b></label></td>
		<td><%= f.text_area :taskother, :size => "30x7" %></td>
	</tr>
	
</table>
<BR>