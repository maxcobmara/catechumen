<div class="tform">
<H2>Examination Mark Details</H2>

	<table width=100%>
		<tr>
			<td class="leftcol"><label>Examination Paper</label></td>
			<td>
				<%= f.collection_select :exam_id, @exam_list, :id, :exam_name_subject_date, 
										{:include_blank=>'Select Examination Paper'},
					 					:onchange => remote_function(:update => "exammark_marks_form", :url => {:action=>'view_marks_form'}, 
										:with => "'examid='+$('"+"exammark_exam_id"+"').value ")%><br><span style="font-size:11px;"> * Single entry of examination marks only allowed for complete set of exam paper.</span>
			</td>
				<%#= f.collection_select :subject_id, Programme.find(:all, :conditions => ['ancestry_depth =?', 2 ]), :id, :subject_list, 
										{:include_blank=>'Select a subject', :selected => @exam.subject_id },
										:onchange => remote_function(:update => "exam_questions_list", :url => {:action=>'view_questions'}, 
										:with => "'subject='+$('"+"exam_subject_id"+"').value + '&exam_id='+'#{@exam.id}' ") %>
		</tr>
		<tr>
			<td class="leftcol"><%= f.label :student_id %></td>
			<td><%= f.collection_select :student_id, @student_list, :id, :matrix_name, :include_blank=>'Select student', :selected=>@exammark.student_id %></td>
		</tr>
		<tr>
			<td class="leftcol">Examquestions</td>
			<td>
				<span id="exammark_marks_form">
					<% if @exammark.id.nil? || @exammark.id.blank? %>
						<!--resubmission of new exammark, either student or exampaper not selected.-->
						<% @exam_id=@exammark.exam_id %>
						<%=render :partial => 'view_marks_form', :locals => {:f => f,:examid=>@exam_id} %> 
					<% else %>
						<!--edit existing record-->
						<% @exam_id=@exammark.exam_id %>
						<%=render :partial => 'view_marks_form', :locals => {:f => f,:examid=>@exam_id} %>
					<% end %>
				</span>
			</td>
		</tr>
	</table>
	
	
	
	
	
	
