<table>
	<tr>
		<td class="leftcol"><label for="statusremark"><b>Remarks:</b></label></td>
		<td><%= f.text_area :statusremark, :size => "50x7" %></td>
	</tr>
	<tr>
		<td class="leftcol"><label for="approver_id"><b>Approver:</b></label></td>
		<td><%= f.collection_select :approver_id, Staff.find(:all, :order => :name), :id, :name, :include_blank => true %></td>
	</tr>
	<tr>
	 	<td class="leftcol"><label for="editdt"><b>Approval Date:</b></label></td>
		<td><%= f.date_select :approvedt, :start_year => 2010, :end_year => 2020, :order => [:day, :month, :year] %></td>
	</tr>
</table>