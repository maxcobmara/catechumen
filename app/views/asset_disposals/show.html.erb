<div class="tform">
<%= render :partial => 'show_process' %>
<% if @asset_disposal.revalue?%>
<%= render :partial => 'show_revalue' %>
<% end %>
<% if @asset_disposal.is_verified? %>
<%= render :partial => 'show_disposal' %>
<% end %>
</div>


<% if @asset_disposal.is_verified == true && @asset_disposal.is_disposed == false %>
	<%= link_to (t 'assetdefects.dispose'), :action => 'dispose', :id => @asset_disposal %>
<% else %>
	<%= link_to (t 'edit'), edit_asset_disposal_path(@asset_disposal) %> |
<% end %>

<%= link_to (t 'back'), asset_disposals_path %>